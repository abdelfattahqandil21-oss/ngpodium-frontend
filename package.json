{
  "name": "ngpodium",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ssr": "ng build --configuration=production && ng build --configuration=production --output-hashing=none --main=src/main.server.ts --output-path=dist/ngpodium/server",
    "serve:ssr": "node dist/ngpodium/server/server.mjs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:ngpodium": "node dist/ngpodium/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.0",
    "@angular/ssr": "^20.3.9",
    "@tiptap/core": "^3.10.5",
    "@tiptap/extension-code-block-lowlight": "^3.10.5",
    "@tiptap/extension-heading": "^3.10.5",
    "@tiptap/extension-image": "^3.10.5",
    "@tiptap/extension-link": "^3.10.5",
    "@tiptap/starter-kit": "^3.10.5",
    "express": "^5.1.0",
    "highlight.js": "^11.9.0",
    "jwt-decode": "^4.0.0",
    "lowlight": "^3.3.0",
    "primeicons": "^7.0.0",
    "rxjs": "~7.8.0",
    "serve": "^14.2.5",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.2"
  }
